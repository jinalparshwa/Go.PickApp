<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Red">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_56dp"
                android:layout_height="@dimen/_56dp"
                android:src="@drawable/back_new" />

            <go.pickapp.Controller.Textview
                android:id="@+id/headertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_10dp"
                android:gravity="center"
                android:text="@string/Product_details"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20dp" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/product_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_170dp"
                                    android:scaleType="fitXY" />


                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_15dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:orientation="vertical">

                            <go.pickapp.Controller.Textview
                                android:id="@+id/txt_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textColor="@color/Red"
                                android:textSize="@dimen/_16sp" />

                            <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginTop="@dimen/_5dp"-->
                            <!--android:orientation="horizontal">-->


                            <!--<go.pickapp.Controller.Textview_Bold-->
                            <!--android:id="@+id/txt_order"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="center"-->
                            <!--android:text=""-->
                            <!--android:textSize="@dimen/_12sp" />-->

                            <!--<go.pickapp.Controller.Textview-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/_5dp"-->
                            <!--android:gravity="center"-->
                            <!--android:text="times ordered"-->
                            <!--android:textSize="@dimen/_12sp" />-->


                            <!--</LinearLayout>-->

                        </LinearLayout>


                        <go.pickapp.Controller.Textview_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:text="@string/Description"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_14sp" />

                        <go.pickapp.Controller.Textview
                            android:id="@+id/txt_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:textSize="@dimen/_10sp"></go.pickapp.Controller.Textview>

                        <ExpandableListView
                            android:id="@+id/lv_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:divider="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:layout_marginTop="@dimen/_3dp"
                            android:background="@color/silver" />


                        <RelativeLayout
                            android:id="@+id/rr_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_marginRight="@dimen/_15dp"
                            android:layout_marginTop="@dimen/_5dp">

                            <go.pickapp.Controller.Textview
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Special_Instruction"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/_15sp" />

                            <ImageView
                                android:id="@+id/img_special_one"
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_7dp"
                                android:src="@drawable/arrow_down"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/img_special_two"
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_7dp"
                                android:rotation="180"
                                android:src="@drawable/arrow_down"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/silver" />


                        <RelativeLayout
                            android:id="@+id/rr_sepcial"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80dp"
                            android:layout_margin="@dimen/_15dp"
                            android:background="@drawable/special_instrucation"
                            android:visibility="visible">


                            <go.pickapp.Controller.Edittext
                                android:id="@+id/et_special"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10dp"
                                android:background="@android:color/transparent"
                                android:gravity="top"
                                android:hint="@string/Add_note"
                                android:inputType="textMultiLine"
                                android:textSize="@dimen/_14sp" />


                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/product_details_amount_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <go.pickapp.Controller.Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Price"
                                android:textColor="@color/Red"
                                android:textSize="@dimen/_15sp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="@dimen/_25dp"
                                android:layout_marginLeft="@dimen/_15dp"
                                android:background="@color/Black" />

                            <go.pickapp.Controller.Textview
                                android:id="@+id/txt_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/_17sp" />

                            <go.pickapp.Controller.Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2dp"
                                android:text="KD"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/_7dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <go.pickapp.Controller.Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/Quantity"
                                android:textColor="@color/Red"
                                android:textSize="@dimen/_15sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:background="@drawable/product_details_amount_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_minus"
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_25dp"
                                    android:src="@drawable/minus_new" />

                                <go.pickapp.Controller.Textview
                                    android:id="@+id/txt_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:layout_marginRight="@dimen/_5dp"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/Black"
                                    android:textSize="@dimen/_12sp" />

                                <ImageView
                                    android:id="@+id/img_plus"
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_25dp"
                                    android:src="@drawable/plus_new" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">


                    <go.pickapp.Controller.Textview_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textColor="@color/Red"
                        android:textSize="@dimen/_15sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:background="@color/Black" />

                    <go.pickapp.Controller.Textview
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_17sp" />

                    <go.pickapp.Controller.Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:text="@string/KD"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_7dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/silver" />


                <RelativeLayout
                    android:id="@+id/rr_add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/Red">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15dp"
                            android:layout_height="@dimen/_15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cart_white" />

                        <go.pickapp.Controller.Textview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:gravity="center"
                            android:text="@string/add_to_cart"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_14sp" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>