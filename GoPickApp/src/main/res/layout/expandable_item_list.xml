<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Red"
            android:gravity="center"
            android:orientation="horizontal">


            <go.pickapp.Controller.Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/_5dp"
                android:text="@string/add_to_cart"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sp" />

            <!--<ImageView-->
                <!--android:id="@+id/edit_query"-->
                <!--android:layout_width="@dimen/_30dp"-->
                <!--android:layout_height="@dimen/_30dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/cart_white" />-->


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Red"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_30dp"
                android:src="@drawable/cart_white" />


            <go.pickapp.Controller.Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingRight="@dimen/_20dp"
                android:paddingTop="@dimen/_5dp"
                android:text="@string/add_to_cart"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sp" />


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_item_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_60dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginTop="@dimen/_5dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical">

                <go.pickapp.Controller.Textview_Bold
                    android:id="@+id/dish_title"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/Menu_type_text"
                    android:textSize="@dimen/_15sp" />

                <go.pickapp.Controller.Textview
                    android:id="@+id/dish_desc"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/Menu_type_text"
                    android:textSize="@dimen/_10sp" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@color/Menu_type_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <go.pickapp.Controller.Textview
                    android:id="@+id/dish_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15dp" />

                <go.pickapp.Controller.Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/KD"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_8dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>