<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_60dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginTop="@dimen/_5dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="vertical">


            <go.pickapp.Controller.Textview_Bold
                android:id="@+id/dish_title"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/Menu_type_text"
                android:textSize="@dimen/_13sp" />

            <go.pickapp.Controller.Textview
                android:id="@+id/dish_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Menu_type_text"
                android:textSize="@dimen/_10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_details_amount_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_minus"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/minus_new" />

                <go.pickapp.Controller.Textview
                    android:id="@+id/txt_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sp" />

                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/plus_new" />


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@color/Menu_type_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <go.pickapp.Controller.Textview
                android:id="@+id/dish_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15dp" />

            <go.pickapp.Controller.Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/KD"
                android:textColor="@color/Black"
                android:textSize="@dimen/_8dp" />

            <go.pickapp.Controller.Textview
                android:id="@+id/remove_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Remove"
                android:textColor="@color/Red"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="@dimen/_40dp"
                android:layout_height="0.5dp"
                android:background="@color/Red" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>