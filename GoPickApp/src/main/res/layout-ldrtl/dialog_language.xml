<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/dialog_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_l_English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/chk_l_english"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/radio_unselected" />


            <go.pickapp.Controller.Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:text="@string/English"
                android:textColor="@color/Red"
                android:textSize="@dimen/_18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_l_Arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/chk_l_arabic"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/radio_unselected" />


            <go.pickapp.Controller.Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:text="@string/Arabic"
                android:textColor="@color/Red"
                android:textSize="@dimen/_18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <go.pickapp.Controller.Textview
                android:id="@+id/okbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/selected_cusine_bg"
                android:gravity="center"
                android:padding="@dimen/_3dp"
                android:text="@string/OK"
                android:textColor="@color/White"
                android:textSize="@dimen/_18sp" />

            <go.pickapp.Controller.Textview
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/selected_cusine_bg"
                android:gravity="center"
                android:padding="@dimen/_3dp"
                android:text="@string/Cancel"
                android:textColor="@color/White"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>